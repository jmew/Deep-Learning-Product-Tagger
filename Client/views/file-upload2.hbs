<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Wish Image Match</title>
    <meta name="description" content="">
    <!-- MaterializeCSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.4.0/css/bulma.min.css">

    <!-- Dropzone.js -->
    <link rel="stylesheet" href="webstyles/dropzone.css">
    <script type="text/javascript" src="webscripts/dropzone.js"></script>

    <link rel="stylesheet" href="webstyles/styles2.css">

  </head>
  <body>

    <nav class="nav has-shadow navbar-fixed">
      <div class="container">
        <div class="nav-left">
          <a class="nav-item">
            <img src="https://lever-client-logos.s3.amazonaws.com/wish.png" alt="Wish logo">
          </a>
          <a class="nav-item is-tab is-hidden-mobile is-active">Demo</a>
          <a class="nav-item is-tab is-hidden-mobile">About</a>
        </div>
        <span class="nav-toggle">
          <span></span>
          <span></span>
          <span></span>
        </span>
        <div class="nav-right nav-menu">
          <a class="nav-item is-tab is-hidden-tablet is-active">Demo</a>
          <a class="nav-item is-tab is-hidden-tablet">About</a>
        </div>
      </div>
    </nav>

    <div id="demo-content">

      <div class="columns">
        <div class="column">
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">
                Add Product
              </p>
              <a class="card-header-icon">
                <span class="icon">
                  <i class="fa fa-angle-down"></i>
                </span>
              </a>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="field">
                  <label class="label">Product Name</label>
                  <p class="control">
                    <input class="input" type="text" placeholder="Enter product name">
                  </p>
                </div>
                <div class="field">
                  <label class="label">Product Description</label>
                  <p class="control">
                    <textarea class="textarea" placeholder="Enter a description of the product"></textarea>
                  </p>
                </div>
                <div class="field">
                  <label class="label">Product Tags</label>
                  <p class="control">
                    <input class="input" type="text" id='product-tags' placeholder="Enter product tags (e.g. boots)">
                  </p>
                </div>
                <div class="field">
                  <label class="label">Unique ID</label>
                  <p class="control">
                    <input class="input" type="text" placeholder="Unique ID">
                  </p>
                </div>
                <div class="field">
                <label class="label">Upload Product Image</label>
                  <form id="upload-widget" method="post" action="/upload" class="dropzone">
                    <div class="fallback">
                    <input name="file" type="file" />
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>

          <div class="card" id="second-card">
            <header class="card-header">
              <p class="card-header-title">
                Inventory and Shipping
              </p>
              <a class="card-header-icon">
                <span class="icon">
                  <i class="fa fa-angle-down"></i>
                </span>
              </a>
            </header>
            <div class="card-content">
              <div class="content">
                <div class="field">
                  <label class="label">Price</label>
                  <p class="control">
                    <input class="input" type="text" placeholder="Acceptable: $100.99">
                  </p>
                </div>
                <div class="field">
                  <label class="label">Quantity</label>
                  <p class="control">
                    <input class="input" type="text" placeholder="Acceptable: 1200">
                  </p>
                </div>
                <div class="field">
                  <label class="label">Shipping</label>
                  <p class="control">
                    <input class="input" type="text" placeholder="Acceptable: $4.00">
                  </p>
                </div>
                <div class="field">
                  <label class="label">Earnings</label>
                  <p class="control">
                    <input class="input" type="text" disabled>
                  </p>
                </div>
              </div>
            </div>
            <footer class="card-footer">
              <a class="card-footer-item">Submit</a>
            </footer>
          </div>

        </div>
      </div>
    </div>

    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.1/js/materialize.min.js"></script>
    <script src="webscripts/file-upload-config.js"></script>
    <script src="webscripts/scripts2.js"></script>
  </body>
</html>